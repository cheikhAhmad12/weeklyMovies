PGPASSWORD=etl psql -h localhost -p 5434 -U etl -d movies -c "
SELECT c.critique_id,
       f.titre,
       c.auteur,
       c.note_numeric,
       left(c.texte, 50) || 'â€¦' AS extrait,
       c.sentiment_label
FROM fact_critique c
JOIN dim_film f USING(film_id)
ORDER BY c.critique_id DESC
LIMIT 5;"